{% extends 'base.html.twig' %}

{% block title %}Request a dog
{% endblock %}

{% block body %}
	<div class="container mt-5">
		{{ form_start(form) }}
		<div class="d-flex flex-row gap-5 align-items-center my-5">
			<label for="" class="">You want to adopt
			</label>
			{{ form_widget(form.dogs) }}
		</div>
		{{ form_widget(form.messages[0], {'attr': {'rows': 5}}) }}
		<button type="submit" class="btn btn-primary btn-lg">Send</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Announcement's modification{% endblock %}

{% block body %}

<div class="container">
{{ form_start(form) }}
	{{ form_row(form.title) }}
	{{ form_row(form.info) }}
	<h2>{{ form_label(form.dogs) }}</h2>
	<button type="button" class="add_item_link" data-collection-holder-class="dogs">Add a dog</button>
	<ul class="dogs"
    data-index="{{ form.dogs|length > 0 ? form.dogs|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_widget(form.dogs.vars.prototype)|e('html_attr') }}">
		{% for child in form.dogs %}
			<li>{{ form_widget(child) }}</li>
		{% endfor %}
	</ul>
	<button type="submit">Modify</button>
{{ form_end(form) }}
<div>

{% endblock %}
